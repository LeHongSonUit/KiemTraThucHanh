@using X.PagedList.Mvc.Core;
@using KiemTraThucHanh.Models;
@model X.PagedList.IPagedList<TKhachHang>;

@{
    ViewData["Title"] = "DanhSachNguoiDung";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>DanhSachNguoiDung</h1>

<p>
    <a asp-action="ThemNguoiDungMoi">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên khách hàng
            </th>
            <th>
                Ngày sinh 
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ 
            </th>
            <th>
                Loại khách hàng 
            </th>
            <th>
                Ghi chú 
            </th>
            <th>
                UsernameNavigation
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKhachHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiKhachHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhDaiDien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
            </td>
            <td>
                    <a asp-action="SuaKhachHang" asp-route-maKhachHang="@item.MaKhanhHang">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaKhanhHang">Details</a> |
                    <a asp-action="XoaKhachHang" asp-route-maKhachHang="@item.MaKhanhHang">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="product_pagination">
    @Html.PagedListPager(Model, page => Url.Action("DanhSachNguoiDung", new { page = page }))
</div>